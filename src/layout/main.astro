---
import "../styles/global.css";
const baseUrl = import.meta.env.BASE_URL;
const { content } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={baseUrl + "favicon.svg"} />
    <title>{content.title}</title>
    <meta name="description" content={content.description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#D1CEA1" />
    <meta name="og:title" content={content.title} />
    <meta name="og:description" content={content.description} />
    <meta name="og:type" content="website" />
    <meta name="og:image" content={baseUrl + "icon.svg"} />
    <style define:vars={{ "base-url": `"${baseUrl.slice(0, -1)}"` }} />
  </head>
  <body
    class="light merriweather-regular flex min-h-screen flex-col bg-[#F5EEDD] text-[#212121]"
  >
    <slot />
  </body>
</html>
